<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/opensans_regular"
        android:text="Alligator"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Jaw Period:"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintBaseline_toBaselineOf="@+id/jaw_period_edittext"
        app:layout_constraintEnd_toStartOf="@+id/jaw_period_edittext" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Jaw Offset:"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintBaseline_toBaselineOf="@+id/jaw_offset_edittext"
        app:layout_constraintEnd_toStartOf="@+id/jaw_offset_edittext" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Teeth Period:"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintBaseline_toBaselineOf="@+id/teeth_period_edittextt"
        app:layout_constraintEnd_toStartOf="@+id/teeth_period_edittextt" />

    <Button
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:background="@color/riffle_green"
        android:text="Done"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lips_offset_edittext" />

    <EditText
        android:id="@+id/jaw_period_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:background="@drawable/border_layout"
        android:ems="10"
        android:text="13"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/jaw_offset_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/border_layout"
        android:ems="10"
        android:text="8"
        android:gravity="center"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/jaw_period_edittext" />

    <EditText
        android:id="@+id/teeth_period_edittextt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/border_layout"
        android:gravity="center"
        android:ems="10"
        android:text="8"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/jaw_offset_edittext" />







    <TextView
        android:id="@+id/textView3_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Teeth Offset:"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintBaseline_toBaselineOf="@+id/teeth_offset_edittext"
        app:layout_constraintEnd_toStartOf="@+id/teeth_offset_edittext" />

    <TextView
        android:id="@+id/textView4_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Lips Period:"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintBaseline_toBaselineOf="@+id/lips_period_edittext"
        app:layout_constraintEnd_toStartOf="@+id/lips_period_edittext" />

    <TextView
        android:id="@+id/textView5_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Lips Offset:"
        android:fontFamily="@font/montserrat_regular"
        app:layout_constraintBaseline_toBaselineOf="@+id/lips_offset_edittext"
        app:layout_constraintEnd_toStartOf="@+id/lips_offset_edittext" />


    <EditText
        android:id="@+id/teeth_offset_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/border_layout"
        android:ems="10"
        android:text="5"
        android:gravity="center"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/teeth_period_edittextt" />

    <EditText
        android:id="@+id/lips_period_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/border_layout"
        android:ems="10"
        android:gravity="center"
        android:text="5"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/teeth_offset_edittext" />

    <EditText
        android:id="@+id/lips_offset_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/border_layout"
        android:ems="10"
        android:gravity="center"
        android:text="3"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/lips_period_edittext" />
</androidx.constraintlayout.widget.ConstraintLayout>