<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/strategies_card_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:clickable="true"
        android:background="@drawable/strategy_card_border_background"
        android:elevation="1dp"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/strategy_card_border_background"
        android:backgroundTint="@color/cardForground"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="1dp">
            <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="@color/white"
                card_view:layout_constraintVertical_bias="0.6"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider3"
                android:layout_width="0.5dp"
                android:layout_height="0dp"
                android:background="@color/white"
                card_view:layout_constraintBottom_toTopOf="@+id/divider2"
                card_view:layout_constraintStart_toEndOf="@+id/comparison_operator"
                card_view:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider4"
                android:layout_width="0.5dp"
                android:layout_height="0dp"
                android:background="@color/white"
                card_view:layout_constraintBottom_toTopOf="@+id/divider2"
                card_view:layout_constraintEnd_toStartOf="@+id/comparison_operator"
                card_view:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/indicator1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/cardForground"
                android:elevation="12dp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_semibold"
                android:maxLength="30"
                android:maxLines="1"
                android:text="Bollinger band"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                card_view:layout_constraintBottom_toBottomOf="@+id/divider4"
                card_view:layout_constraintEnd_toStartOf="@+id/divider4"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/logical_operator"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/cardForground"
                android:elevation="12dp"
                android:fontFamily="@font/fredoka_one"
                android:text="and"
                android:textColor="@color/amber"
                android:textSize="10dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/divider3" />

            <Button
                android:id="@+id/comparison_operator"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:background="@color/cardForground"
                android:elevation="12dp"
                android:text="@string/less_than"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                card_view:layout_constraintBottom_toTopOf="@+id/divider2"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/indicator2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/cardForground"
                android:elevation="12dp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_semibold"
                android:maxLength="30"
                android:maxLines="1"
                android:text="Bollinger band"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                card_view:layout_constraintBottom_toBottomOf="@+id/divider3"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/divider3"
                card_view:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>