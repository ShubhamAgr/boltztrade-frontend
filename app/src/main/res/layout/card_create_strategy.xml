<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/strategies_card_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:clickable="true"
        android:elevation="1dp"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:layout_margin="3dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">


            <Button
                android:id="@+id/indicator1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/indicator_background"
                android:backgroundTint="@color/chips"
                android:elevation="12dp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_semibold"
                android:foregroundTint="@color/chips"
                android:maxLength="30"
                android:maxLines="1"
                android:textAllCaps="false"
                android:text="Bollinger band"
                android:textColor="@color/deep_saffron"
                android:textSize="12sp"
                card_view:layout_constraintEnd_toStartOf="@+id/comparison_operator"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/logical_operator"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/indicator_background"
                android:backgroundTint="@color/chips"
                android:elevation="12dp"
                android:foregroundTint="@color/chips"
                android:text="and"
                android:textColor="@color/deep_saffron"
                android:textSize="10dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/comparison_operator" />

            <Button
                android:id="@+id/comparison_operator"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/indicator_background"
                android:backgroundTint="@color/chips"
                android:elevation="12dp"
                android:textSize="9dp"
                android:foregroundTint="@color/chips"
                android:text="@string/less_than"
                android:textColor="@color/deep_saffron"
                card_view:layout_constraintBottom_toBottomOf="@+id/indicator1"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="@+id/indicator1" />

            <Button
                android:id="@+id/indicator2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/indicator_background"
                android:backgroundTint="@color/chips"
                android:elevation="12dp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_semibold"
                android:foregroundTint="@color/chips"
                android:maxLength="30"
                android:maxLines="1"
                android:text="Bollinger band"
                android:textAllCaps="false"
                android:textColor="@color/deep_saffron"
                android:textSize="12sp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/comparison_operator"
                card_view:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>